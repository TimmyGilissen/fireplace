<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="rabbitConnFactory"
          class="org.springframework.amqp.rabbit.connection.CachingConnectionFactory">
        <constructor-arg><value>rabbitmq-4f3b7bb6.timmygilissen.svc.tutum.io</value></constructor-arg>
        <property name="username" value="timmygilissen" />
        <property name="password" value="Gilit0809" />
        <property name="virtualHost" value="fireplace" />
        <property name="port" value="5672" />
    </bean>

    <!-- Spring AMQP Template -->
    <bean id="template"
          class="org.springframework.amqp.rabbit.core.RabbitTemplate">
        <property name="connectionFactory" ref="rabbitConnFactory" />
        <property name="routingKey" value="fireplace"/>
        <property name="queue" value="fireplace"/>
    </bean>

    <!-- Spring AMQP Admin -->
    <bean id="admin" class="org.springframework.amqp.rabbit.core.RabbitAdmin">
        <constructor-arg ref="rabbitConnFactory" />
    </bean>
</beans>